generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Lesson {
  grade  Int
  number Int
  name   String
  words  Word[]

  @@id([grade, number])
}

model Word {
  word             String            @id
  sources          String[]
  exampleSentences ExampleSentence[]
  Lesson           Lesson?           @relation(fields: [lessonGrade, lessonNumber], references: [grade, number])
  lessonGrade      Int?
  lessonNumber     Int?
}

model ExampleSentence {
  id       Int    @id
  sentence String
  word     Word   @relation(fields: [wordId], references: [word])
  wordId   String
}
